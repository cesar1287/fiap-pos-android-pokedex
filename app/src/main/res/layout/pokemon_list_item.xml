<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#FFF"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivPokemon"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/charizard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPokemonName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Charizard"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvPokemonNumber"
        app:layout_constraintStart_toStartOf="@+id/tvPokemonNumber"
        app:layout_constraintTop_toBottomOf="@+id/tvPokemonNumber" />

    <TextView
        android:id="@+id/tvPokemonNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="#001"
        android:textColor="#CCC"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="@+id/ivPokemon"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ivPokemon"
        app:layout_constraintTop_toBottomOf="@+id/ivPokemon" />
</androidx.constraintlayout.widget.ConstraintLayout>
